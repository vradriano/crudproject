<!DOCTYPE html>
<html lang="en">
  <%- include('partials/head.ejs') %>
<body>
  <h1><%- title %></h1>

  <%- include('partials/navbar.ejs') %>

  <% if(typeof message !== "undefined"){ %>
    <%= message %>
  <% } %>

  <form action="/edit/<%= user._id %>" method="POST">
    <div>
      <label>Nome</label>
      <input type="text" name="name" placeholder="Digite seu nome" value="<%= user.name %>">
    </div>
    <div>
      <label>Idade</label>
      <input type="text" name="age" placeholder="Digite sua idade" value="<%= user.age %>">
    </div>
    <div>
      <label>Email</label>
      <input type="text" name="email" placeholder="Digite seu email" value="<%= user.email %>">
    </div>
    <div>
      <label>Password</label>
      <input type="password" name="password" placeholder="Digite sua senha" value="<%= user.password %>">
    </div>
    <button type="submit">Editar</button>
  </form>
  
  <%- include('partials/foot.ejs') %>
</body>
</html>